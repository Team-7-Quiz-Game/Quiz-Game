<Page x:Class="Trivia.UI.QuizzardInitialPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GroupProject_Test_02"
      mc:Ignorable="d" 
       d:DesignHeight="700" d:DesignWidth="900" Background="#edea49"
      Title="QuizzardInitialPage">

    <Grid>
        <Label Content="Quizzard's Magic Page" HorizontalAlignment="Left" Height="56" Margin="233,20,0,0" VerticalAlignment="Top" Width="435" FontSize="36" FontFamily="Showcard Gothic"/>
        <Label Content="Questions' count:" HorizontalAlignment="Left" Height="35" Margin="555,89,0,0" VerticalAlignment="Top" Width="176" FontFamily="Showcard Gothic" FontSize="18"/>
        <Label Content="Question :" HorizontalAlignment="Left" Height="35" Margin="22,147,0,0" VerticalAlignment="Top" Width="109" FontFamily="Showcard Gothic" FontSize="18"/>
        <TextBox HorizontalAlignment="Left" Height="52" TextWrapping="Wrap" Text="Enter your question here" FontFamily="Consolas" FontWeight="Bold" FontSize="17" Name="Question" VerticalAlignment="Top" Width="687" Margin="142,141,0,0" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.078"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.399"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label Content="Answer Options :" HorizontalAlignment="Left" Height="30" Margin="22,202,0,0" VerticalAlignment="Top" Width="172" FontFamily="Showcard Gothic" FontSize="18" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="1.239"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.378"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="A:" HorizontalAlignment="Left" Height="37" Margin="114,242,0,0" VerticalAlignment="Top" Width="35" FontFamily="Showcard Gothic" FontSize="24" RenderTransformOrigin="0.5,0.5" Foreground="#FF004506">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="1.239"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.378"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBox HorizontalAlignment="Left" Height="74" TextWrapping="Wrap" Text="Enter answer A" FontFamily="Consolas" FontWeight="Bold" FontSize="17" Name="AnswerA" VerticalAlignment="Top" Width="273" Margin="178,240,0,0" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.078"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.399"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox HorizontalAlignment="Left" Height="74" TextWrapping="Wrap" Text="Enter answer B" FontFamily="Consolas" FontWeight="Bold" FontSize="17" Name="AnswerB" VerticalAlignment="Top" Width="273" Margin="514,240,0,0" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.078"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.399"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox HorizontalAlignment="Left" Height="74" TextWrapping="Wrap" Text="Enter answer C" FontFamily="Consolas" FontWeight="Bold" FontSize="17" Name="AnswerC" VerticalAlignment="Top" Width="273" Margin="177,354,0,0" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.078"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.399"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox HorizontalAlignment="Left" Height="74" TextWrapping="Wrap" Text="Enter answer D" FontFamily="Consolas" FontWeight="Bold" FontSize="17" Name="AnswerD" VerticalAlignment="Top" Width="273" Margin="518,353,0,0" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.078"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.399"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label Content="B:" HorizontalAlignment="Left" Height="37" Margin="471,243,0,0" VerticalAlignment="Top" Width="35" FontFamily="Showcard Gothic" FontSize="24" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="1.239"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.378"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="C:" HorizontalAlignment="Left" Height="37" Margin="115,357,0,0" VerticalAlignment="Top" Width="35" FontFamily="Showcard Gothic" FontSize="24" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="1.239"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.378"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="D:" HorizontalAlignment="Left" Height="37" Margin="472,355,0,0" VerticalAlignment="Top" Width="35" FontFamily="Showcard Gothic" FontSize="24" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="1.239"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.378"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button Content="Add question" HorizontalAlignment="Left" Height="40" Margin="535,462,0,0" VerticalAlignment="Top" Width="161" Click="AddQuestionButton" Background="#FF7DB07A" FontFamily="Consolas" FontSize="18" Foreground="Black" FontWeight="Bold"/>
        <TextBlock Name="QuestionsCount" Text="0" HorizontalAlignment="Left" Height="35" Margin="736,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="22" FontFamily="Showcard Gothic" FontSize="24" Foreground="#FFD30606"/>
        <Label Content="should be &#xD;&#xA;  correct" HorizontalAlignment="Left" Height="47" Margin="82,280,0,0" VerticalAlignment="Top" Width="93" FontFamily="Showcard Gothic" FontSize="15" RenderTransformOrigin="0.5,0.5" Foreground="#FF004506">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="1.239"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.378"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button Content="Finish" HorizontalAlignment="Left" Height="40" Margin="716,462,0,0" VerticalAlignment="Top" Width="161" Click="FinishButton" Background="#FF7DB07A" FontFamily="Consolas" FontSize="18" Foreground="Black" FontWeight="Bold"/>
        <RadioButton Name="rBtnNormal" Content="Normal Question" GroupName="QuestionOptions" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="27,442,0,0" FontSize="16" FontFamily="Consolas" IsChecked="True"/>
        <RadioButton Name="rBtnTimed" Content="Timed Question" GroupName="QuestionOptions" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="28,473,0,0" Height="24" FontSize="16" Width="168" FontFamily="Consolas" RenderTransformOrigin="0.753,0.087"/>
        <RadioButton Name="rBtnBonus" Content="Bonus Question" GroupName="QuestionOptions" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,557,0,0" FontFamily="Consolas" FontSize="16"/>
        <TextBlock Name="rBtnBonusDesc" Text="Select a number to multiply this question's points." HorizontalAlignment="Left" Height="35" Margin="180,586,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="227" FontFamily="Consolas" FontSize="14" />
        <TextBlock Name="BonusNum" HorizontalAlignment="Left" Height="33" TextAlignment="Center" TextWrapping="Wrap" Text="2" FontFamily="Consolas" FontWeight="Bold" FontSize="24"  VerticalAlignment="Top" Width="57" Margin="350,549,0,0" RenderTransformOrigin="0.5,0.5" />
        <TextBlock Name="TimeNum" HorizontalAlignment="Left" Height="33" TextAlignment="Center" TextWrapping="Wrap" Text="7" FontFamily="Consolas" FontWeight="Bold" FontSize="24"  VerticalAlignment="Top" Width="34" Margin="373,469,0,0" RenderTransformOrigin="0.5,0.5" />
        <Slider Foreground="Black" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" Minimum="2" Maximum="10" HorizontalAlignment="Left" Margin="180,557,0,0" VerticalAlignment="Top" Width="165" ValueChanged="SliderBonus_ValueChanged"/>
        <Slider Foreground="Black" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" Minimum="7" Maximum="20" HorizontalAlignment="Left" Margin="180,473,0,0" VerticalAlignment="Top" Width="193" ValueChanged="SliderTime_ValueChanged"/>
        <TextBlock Name="rBtnTimeDesc" Text="Select the time for an answer. Can be between 7 and 20 seconds." HorizontalAlignment="Left" Height="35" Margin="180,513,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="256" FontFamily="Consolas" FontSize="14" />
    </Grid>
</Page>
