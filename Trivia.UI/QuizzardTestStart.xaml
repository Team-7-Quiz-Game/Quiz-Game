        <Button Name="AnswerC" Content="Answer C..." HorizontalAlignment="Left" Height="68" Margin="74,364,0,0" VerticalAlignment="Top" Width="319" Click="AnswerCButton" Background="#FFE7D221" FontFamily="Consolas" FontSize="18" Foreground="Black" FontWeight="Bold"/>
