        <Button Name="AnswerA" Content="Answer A..." HorizontalAlignment="Left" Height="68" Margin="74,226,0,0" VerticalAlignment="Top" Width="319" Click="AnswerAButton" Background="#FFE7D221" FontFamily="Consolas" FontSize="18" Foreground="Black" FontWeight="Bold"/>
