        <TextBlock Name="pPoints" HorizontalAlignment="Left" Height="34" Margin="748,151,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="122" FontFamily="Showcard Gothic" FontSize="30" Foreground="#FFA60202"/>
